@page "/case/{caseId}/exhibit/{exhibitId}"
@inherits ExhibitBase
@attribute [Authorize(Roles = "user")]

<PageLoad @ref="PageLoad">
    <PageTitle> @Exhibit.Reference </PageTitle>

    @* Exhibit Details *@
    <MudGrid class="justify-center my-3">
        <MudItem xs="12" sm="6" md="5" xxl="5">
            <MudCard Class="mud-theme-secondary">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6"> @Exhibit.Reference </MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>
                        <b> Description: </b> @Exhibit.Description
                    </MudText>
                    <MudText>
                        <b> Where Seized / Produced: </b> @Exhibit.WhereSeizedProduced
                    </MudText>
                    <MudText>
                        <b> Date Time Seized / Produced: </b> @Exhibit.DateTimeSeizedProduced.ToString(Settings.DateTimeFormat)
                    </MudText>
                    <MudText>
                        <b> Seized / Produced by: </b> @Exhibit.SeizedBy
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

</PageLoad>