@page "/audit"
@using System.Globalization
@inherits AuditBase
@attribute [Authorize(Roles = "user")]

<PageTitle> Audit </PageTitle>

<PageLoad @ref="PageLoad">

    <MudText Typo="Typo.h1" Align="Align.Center"> Audit Log </MudText>

    <MudDataGrid Items="UserEvents" Filterable="true">
        <Columns>
            <PropertyColumn Property="x => x.DateTime" Culture="CultureInfo.CurrentCulture" Format="@Settings.DateTimeFormat"/>
            <PropertyColumn Property="x => x.Action" Filterable="false"/>
        </Columns>
    </MudDataGrid>
</PageLoad>