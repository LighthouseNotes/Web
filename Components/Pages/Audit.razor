@page "/audit"
@inherits AuditBase
@attribute [Authorize]

<PageTitle> Audit</PageTitle>

<PageLoad @ref="PageLoad">

    <MudText Typo="Typo.h1" Align="Align.Center"> Audit Log</MudText>

    <MudDataGrid T="API.UserAudit" ServerData="LoadGridData">
        <Columns>
            <PropertyColumn Property="x => x.DateTime" Culture="CultureInfo.CurrentCulture"
                            Format="@Settings.DateTimeFormat"/>
            <PropertyColumn Property="x => x.Action"/>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="API.UserAudit"/>
        </PagerContent>
    </MudDataGrid>
</PageLoad>